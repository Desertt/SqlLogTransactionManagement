@model SqlLogTransactionManagement.Models.Employee
@{
    /**/

    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Employee", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Col1)
    <div class="form-group">
        @Html.LabelFor(model => model.Col2, new { @class = "control-label" })
        @Html.EditorFor(model => model.Col2, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Col2)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Col3, new { @class = "control-label" })
        @Html.EditorFor(model => model.Col3, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}